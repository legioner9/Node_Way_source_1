window.onload = function() {

var a;
if (!adsbygoogle.loaded) {a = 2;
setTimeout(function() {
var t = document.getElementById('divtext').innerHTML, find = /<\/p>\s+<p/, re = new RegExp(find, 'g');
t = t.replace(re, '</p> <p style="color:red;">Пожалуйста, отключите блокировку рекламы :) Нам это важно!</p> <p');
document.getElementById('divtext').innerHTML = t;
  }, 4400);
 }	
 else {a = 1;}
var http = new XMLHttpRequest();
var url = '/count.php';
var params = 'g='+a;
http.open('POST', url, true);
http.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
http.send(params);

}

