/* Article FructCode.com */
$( document ).ready(function() {
    $("#btncovid").click(
        function(){
            sendAjaxForm1('covid19form', 'covid19ajaxform', 'https://edu.rosdistant.ru/covid19.php');
            return false;
        }
    );
});

function sendAjaxForm1(result_form, ajax_form, url) {
    $.ajax({
        url:      url,
        type:     "POST",
        dataType: "html",
        data: $("#"+ajax_form).serialize(),
        success: function(response) {
            result = $.parseJSON(response);
            $('#covid19form').html(result.name+'<br>');
        },
        error: function(response) {
            $('#covid19form').html('Ошибка...');
        }
    });
}




